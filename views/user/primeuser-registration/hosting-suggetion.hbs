<form style="position:absolute;">
    <h3>Please select a hosting facility from below</h3>
    <hr>
    <div class="form-group">
        <div class="card 2 bg-primary " style="width: 18rem;" onMouseOver="show_sidebar(ourhosting.id)"
            onMouseOut="hide_sidebar(ourhosting.id)">
            <div class="card-header">
                Check our facilities
            </div>
            <ul class="list-group list-group-flush" style="display:none" id="ourhosting">
                <li class="list-group-item">An item</li>
                <li class="list-group-item">A second item</li>
                <li class="list-group-item">A third item</li>
                <a href="our-hosting" class="btn btn-primary">More</a>

            </ul>
        </div>

    </div>
    <div class="from-group">
        <div class="card 2 bg-primary " style="width: 18rem;" onMouseOver="show_sidebar(otherhosting.id)"
            onMouseOut="hide_sidebar(otherhosting.id)">
            <div class="card-header">
                List of other hosting providers
            </div>
            <ul class="list-group list-group-flush" style="display: none;" id="otherhosting">
                {{#each data}}
                <li onclick="tst('{{name}}','{{details}}','{{link}}')" class="list-group-item" id="{{this.name}}">
                    {{this.name}}</li>
                {{/each}}

            </ul>
        </div>
    </div>



    <!-- Modal -->
  
  <div class="modal fade" id="txt" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ptitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="pbody">
                    ...
                </div>
               <a id="poplink"></a>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
<br>
<br>
  <hr>
</form>

